<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66D2DDE1">

        <com.google.android.material.circularreveal.cardview.CircularRevealCardView
            android:id="@+id/profile_card"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            app:cardCornerRadius="30dp"
            android:layout_marginTop="-30dp"
            android:backgroundTint="#98a7c2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_header_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/ic_back"
            app:layout_constraintEnd_toStartOf="@id/ic_edit"
            app:layout_constraintStart_toEndOf="@id/ic_back"
            app:layout_constraintTop_toTopOf="@+id/ic_back" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ic_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ic_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:src="@drawable/ic_edit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_userprofile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/corner_radius"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_header_profile"
            app:shapeAppearanceOverlay="@style/Circular" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tushar"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/img_userprofile"
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_usereage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Age : 22"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/txt_username"
            android:layout_marginTop="4dp"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_email"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_card"
            android:padding="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="16dp"
            android:padding="16dp"
            android:paddingStart="0dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toEndOf="@id/img_email"            app:layout_constraintTop_toBottomOf="@id/profile_card"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_useremail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="abc@gmail.com"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/txt_email"
            app:layout_constraintTop_toBottomOf="@id/txt_email"
            />

        <View
            android:id="@+id/view_email"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/txt_useremail"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:background="#6A000000"
            android:layout_marginTop="16dp"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_mobile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_email"
            android:padding="16dp"
            android:layout_marginStart="8dp"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_mobile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Mobile"
            android:textSize="16dp"
            android:padding="16dp"
            android:paddingStart="0dp"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@id/view_email"
            app:layout_constraintStart_toEndOf="@id/img_mobile"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_usermobile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="9632145874"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/txt_mobile"
            app:layout_constraintTop_toBottomOf="@id/txt_mobile"
            />

        <View
            android:id="@+id/view_mobile"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/txt_usermobile"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:background="#6A000000"
            android:layout_marginTop="16dp"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_dob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_dob"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_mobile"
            android:padding="16dp"
            android:layout_marginStart="8dp"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_dob"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Date Of Birth"
            android:textSize="16dp"
            android:padding="16dp"
            android:paddingStart="0dp"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@id/view_mobile"
            app:layout_constraintStart_toEndOf="@id/img_dob"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_userdob"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="19/09/2001"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/txt_dob"
            app:layout_constraintTop_toBottomOf="@id/txt_dob"
            />

        <View
            android:id="@+id/view_dob"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/txt_userdob"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:background="#6A000000"
            android:layout_marginTop="16dp"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>