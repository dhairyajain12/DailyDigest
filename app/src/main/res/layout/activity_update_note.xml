<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/createJournal_constraint_lyt"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#edeff2"
    tools:context=".UpdateNoteActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:visibility="gone"
        android:id="@+id/ic_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:minWidth="48dp"
        android:minHeight="24dp"
        android:src="@drawable/ic_menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/btn_back"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/update_edt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/dr_textfield_border_1dp_padding_16start"
        android:hint="Title"
        android:inputType="textCapWords"
        android:minHeight="64dp"
        android:scrollbars="horizontal"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_back" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/update_edt_desc"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/dr_textfield_border_1dp_padding_16start"
        android:gravity="top"
        android:hint="Description"
        android:imeOptions="actionNone"
        android:inputType="textMultiLine|textCapWords"
        android:minHeight="36dp"
        android:minLines="1"
        android:paddingRight="8dp"
        android:scrollbarSize="6dp"
        android:scrollbars="vertical"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/update_edt_title"
        app:layout_constraintVertical_bias="1.0" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_toolbar"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#F4F4F4"
        android:outlineSpotShadowColor="#0000"
        app:cardCornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="@id/update_edt_desc"
        app:layout_constraintEnd_toEndOf="@id/update_edt_desc"
        app:layout_constraintStart_toStartOf="@id/update_edt_desc">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_lyt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btn_bold"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_bold"
                app:layout_constraintBottom_toBottomOf="@id/constraint_lyt"
                app:layout_constraintStart_toStartOf="@id/constraint_lyt"
                app:layout_constraintTop_toTopOf="@id/constraint_lyt" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btn_italic"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="12dp"
                android:src="@drawable/ic_italic"
                app:layout_constraintBottom_toBottomOf="@id/constraint_lyt"
                app:layout_constraintStart_toEndOf="@id/btn_bold"
                app:layout_constraintTop_toTopOf="@id/constraint_lyt" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btn_underline"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="12dp"
                android:src="@drawable/ic_underlined"
                app:layout_constraintBottom_toBottomOf="@id/constraint_lyt"
                app:layout_constraintStart_toEndOf="@id/btn_italic"
                app:layout_constraintTop_toTopOf="@id/constraint_lyt" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btn_format_left"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="12dp"
                android:src="@drawable/ic_format_align_left"
                app:layout_constraintBottom_toBottomOf="@id/constraint_lyt"
                app:layout_constraintStart_toEndOf="@id/btn_underline"
                app:layout_constraintTop_toTopOf="@id/constraint_lyt" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btn_format_center"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="12dp"
                android:src="@drawable/ic_format_align_center"
                app:layout_constraintBottom_toBottomOf="@id/constraint_lyt"
                app:layout_constraintStart_toEndOf="@id/btn_format_left"
                app:layout_constraintTop_toTopOf="@id/constraint_lyt" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btn_format_right"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_format_align_right"
                app:layout_constraintBottom_toBottomOf="@id/constraint_lyt"
                app:layout_constraintEnd_toEndOf="@id/constraint_lyt"
                app:layout_constraintStart_toEndOf="@id/btn_format_center"
                app:layout_constraintTop_toTopOf="@id/constraint_lyt" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ic_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="32dp"
        android:minHeight="48dp"
        android:src="@drawable/ic_color"
        app:layout_constraintBottom_toBottomOf="@id/card_toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/card_toolbar"
        app:layout_constraintTop_toTopOf="@id/card_toolbar" />

</androidx.constraintlayout.widget.ConstraintLayout>
